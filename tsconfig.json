{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es5", "es6", "es2017", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "composite": true,
    "inlineSources": true,
    "baseUrl": "./",
    "paths": {
      "@demiez/hms-error": ["./packages/hms-error/src"],
      "@demiez/hms-error/*": ["./packages/hms-error/src/*"],
      "@demiez/hms-eslint-config": ["./packages/hms-eslint-config"],
      "@demiez/hms-eslint-config/*": ["./packages/hms-eslint-config/*"]
    }
  },
  "exclude": ["node_modules", "dist", "lib"],
  "references": [
    {
      "path": "./packages/hms-error"
    }
  ]
}
